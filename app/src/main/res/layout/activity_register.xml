<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:fillViewport="true">
    <LinearLayout
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/logo_main"
            android:layout_width="250dp"
            android:layout_height="150dp" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/et_reg_Name"
                android:drawableStart="@drawable/ic_pro_user"
                style="@style/et_login"
                android:maxLength="50"
                android:inputType="textPersonName"
                android:hint="Full Name"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/et_reg_flatNo"
                android:drawableStart="@drawable/ic_flat"
                style="@style/et_login"
                android:inputType="text"
                android:hint="Flat Number"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/et_reg_phoneNo"
                android:drawableStart="@drawable/ic_pro_phone"
                style="@style/et_login"
                android:inputType="phone"
                android:maxLength="10"
                android:hint="Phone Number"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/et_reg_email"
                android:drawableStart="@drawable/ic_pro_email"
                style="@style/et_login"
                android:inputType="textEmailAddress"
                android:hint="Email"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/et_reg_adharNo"
                android:drawableStart="@drawable/ic_pro_adhar"
                style="@style/et_login"
                android:inputType="phone"
                android:maxLength="12"
                android:hint="Adhar Number"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_apartmentName"
            android:entries="@array/spinner_apartment_name"
            style="@style/et_login"/>
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_areaName"
            android:entries="@array/spinner_area_name"
            style="@style/et_login"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/et_reg_city"
                android:drawableStart="@drawable/ic_pro_location"
                style="@style/et_login"
                android:inputType="textPersonName"
                android:hint="City"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/et_reg_state"
                android:drawableStart="@drawable/ic_pro_location"
                style="@style/et_login"
                android:inputType="textPersonName"
                android:hint="State"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/et_reg_pinCode"
                android:drawableStart="@drawable/ic_pro_email"
                style="@style/et_login"
                android:maxLength="6"
                android:inputType="phone"
                android:hint="Pin Code"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/ic_pass_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:drawableStart="@drawable/ic_password"
                android:id="@+id/et_reg_pass"
                style="@style/et_login"
                android:inputType="textWebPassword"
                android:hint="Password"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/ic_pass_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:drawableStart="@drawable/ic_password"
                android:id="@+id/et_reg_pass_re"
                style="@style/et_login"
                android:inputType="textWebPassword"
                android:hint="Re enter the Password"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.v7.widget.CardView
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="5dp"
            android:padding="1dp"
            android:layout_marginTop="24dp"
            android:layout_width="150dp"
            android:layout_height="50dp">
            <Button
                android:id="@+id/btn_reg_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="Submit"
                android:background="@color/colorPrimary"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_reg_forgotPass"
                android:text="Forgot Password ?\t"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_reg_login"
                android:text="Login"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>