<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:elevation="22dp"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
   android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <android.support.v7.widget.CardView
                    android:layout_margin="4dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_cat_fresh"
                    android:id="@+id/iv_laundry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>
                <TextView
                    android:id="@+id/tv_cart_name"
                    android:gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:minLines="2"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp"
                    android:text="Product Name"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="SmallSp" />

                    <Button
                        android:layout_weight=".6"
                        android:layout_width="0dp"
                        android:layout_gravity="top"
                        android:id="@+id/btn_remove_from_cart"
                        android:background="@drawable/bg_transparent"
                        android:text="Remove"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
               android:layout_weight="1"
              android:layout_width="0dp"
                android:layout_height="match_parent">

                    <TextView
                        android:hint="Steam Press"
                        style="@style/tv_item_price"/>
                    <TextView
                        android:id="@+id/tv_cart_price_press"
                        style="@style/tv_item_price"
                        />

                    <TextView
                        style="@style/tv_item_label" />
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/ll_btn_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_remove_press_cart"
                        android:background="@drawable/ic_remove"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />
                    <TextView
                        android:id="@+id/tv_count_item_press_cart"
                        style="@style/et_item_count"/>
                    <Button
                        android:id="@+id/btn_add_press_cart"
                        android:background="@drawable/ic_add"
                        android:layout_width="22dp"
                        android:layout_height="22dp"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
               android:layout_weight="1"
              android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">

                    <TextView
                        android:hint="Wash"
                        style="@style/tv_item_price" />
                    <TextView
                        android:id="@+id/tv_cart_price_wash"
                        style="@style/tv_item_price" />


                    <TextView
                        android:id="@+id/tv_laundry_wash_total"
                        style="@style/tv_item_label"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:id="@+id/ll_btn_details_wash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_remove_wash_cart"
                        android:background="@drawable/ic_remove"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />
                    <TextView
                        android:id="@+id/tv_count_item_wash_cart"
                        style="@style/et_item_count"/>
                    <Button
                        android:id="@+id/btn_add_wash_cart"
                        android:background="@drawable/ic_add"
                        android:layout_width="22dp"
                        android:layout_height="22dp"/>
                </LinearLayout>


            </LinearLayout>

                <LinearLayout
                android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
              android:layout_width="0dp"
                android:layout_height="match_parent">
                    <TextView
                        android:hint="Dry Clean"
                        style="@style/tv_item_price" />
                    <TextView
                        android:id="@+id/tv_price_dry_cart"
                        style="@style/tv_item_price"
                         />
                    <TextView
                        android:id="@+id/tv_dry_total_cart"
                       style="@style/tv_item_label" />
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_remove_dry_cart"
                        android:background="@drawable/ic_remove"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />
                    <TextView
                        android:id="@+id/tv_count_item_dry_cart"
                        style="@style/et_item_count"/>
                    <Button
                        android:id="@+id/btn_add_dry_cart"
                        android:background="@drawable/ic_add"
                        android:layout_width="22dp"
                        android:layout_height="22dp"/>
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Total Price"
                        style="@style/tv_item_price"  />
                    <TextView
                        android:id="@+id/tv_total_price_cart"
                        style="@style/tv_item_price"  />
                    <TextView
                        android:text="Total Quantity"
                        style="@style/tv_item_label" />

                    <TextView
                        android:id="@+id/tv_count_item_total_cart"
                        android:hint="0"
                        style="@style/et_item_count"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
