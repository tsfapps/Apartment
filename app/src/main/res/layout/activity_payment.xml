<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <RelativeLayout
                android:layout_marginEnd="2dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_wallet"
                    android:padding="8dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tvToolbar"
                    android:text="My Wallet"
                    android:layout_toRightOf="@id/iv_back"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginStart="16dp"
        android:id="@+id/iv_wallet_add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_wallet_black" />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/wallet_amount_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wallet Amount : ₹ "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/iv_wallet_add" />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/wallet_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/wallet_amount_txt" />
    <TextView
        android:id="@+id/join_amount_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Billing Amount : ₹ "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/iv_wallet_add"
        android:layout_below="@id/wallet_amount"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/billing_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/join_amount_txt"
        android:layout_below="@id/wallet_amount"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/et_billing_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_wallet_add"
        android:layout_margin="24dp"
        android:text="₹ 10"
        android:gravity="center"
        android:focusable="true"/>
    <Button
        android:id="@+id/btn_payment"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Add"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_billing_amount"
        android:layout_margin="24dp"/>
    </RelativeLayout>
</RelativeLayout>