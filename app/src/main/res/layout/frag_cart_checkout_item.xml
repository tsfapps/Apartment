<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:elevation="22dp"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/margin_top"
    android:layout_marginEnd="@dimen/margin_top"
    android:layout_marginStart="@dimen/margin_top"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <android.support.v7.widget.CardView
                android:layout_margin="4dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_cat_fresh"
                    android:id="@+id/iv_cartCheckout_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/tv_cartCheckoutProduct_name"
                android:gravity="center_vertical"
                android:layout_weight="1.5"
                android:minLines="2"
                android:textColor="@color/black"
                android:text="Product Name"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight=".6"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:text="Total Quantity"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    style="@style/tv_item_price" />

                <TextView
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:text="Total Price"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    style="@style/tv_item_price"  />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight=".30"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/red"
                    android:id="@+id/tv_cartCheckoutCount_total"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    style="@style/tv_item_price"/>

                <TextView
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/red"
                    android:id="@+id/tv_cartCheckoutPrice_total"
                    android:textSize="14sp"
                    style="@style/tv_item_price"  />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:hint="Steam Press in ₹"
                    style="@style/tv_item_price"/>
                <TextView
                    android:id="@+id/tv_cartCheckoutPrice_press"
                    style="@style/tv_item_price"
                    />
                <TextView
                    android:text="Quantity"
                    style="@style/tv_item_label" />
                <TextView
                    android:id="@+id/tv_cartCheckoutCount_press"
                    style="@style/tv_cart_checkout"/>


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:hint="Wash in ₹"
                    style="@style/tv_item_price" />
                <TextView
                    android:id="@+id/tv_cartCheckoutPrice_wash"
                    style="@style/tv_item_price" />


                <TextView
                    android:text="Quantity"
                    style="@style/tv_item_label"/>
                <TextView
                    android:id="@+id/tv_cartCheckoutCount_wash"
                    style="@style/tv_cart_checkout"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:hint="Dry Clean in ₹"
                    style="@style/tv_item_price" />
                <TextView
                    android:id="@+id/tv_cartCheckoutPrice_dry"
                    style="@style/tv_item_price"
                    />
                <TextView
                    android:text="Quantity"
                    style="@style/tv_item_label" />
                    <TextView
                        android:id="@+id/tv_cartCheckoutCount_dry"
                        style="@style/tv_cart_checkout"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
