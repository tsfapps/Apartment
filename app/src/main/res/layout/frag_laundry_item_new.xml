<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:elevation="22dp"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
   android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="NestedWeights">
                <android.support.v7.widget.CardView
                    android:layout_margin="4dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_cat_fresh"
                    android:id="@+id/iv_laundry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_laundry_product_name"
                        android:gravity="center_vertical"
                        android:minLines="2"
                        android:textColor="@color/black"
                        android:text="Product Name"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_laundry_price"
                        style="@style/tv_item_price" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_laundry_press_total"
                        style="@style/tv_item_label" />
                    <EditText
                        android:id="@+id/et_laundry_quantity"
                        style="@style/et_item_count"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_laundry_add_to_cart"
                    android:background="@color/red"
                    android:text="Add"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="80dp"
                    android:textAllCaps="false"
                    android:layout_height="30dp" />
            </LinearLayout>
                    <TextView
                        android:padding="4dp"
                        android:text="Description"
                        android:id="@+id/tv_laundry_description"
                        style="@style/tv_item_label"  />
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
