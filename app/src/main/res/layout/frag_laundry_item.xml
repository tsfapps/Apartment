<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:elevation="22dp"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                tools:ignore="NestedWeights">
                <android.support.v7.widget.CardView
                    android:layout_margin="4dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_cat_fresh"
                    android:id="@+id/iv_laundry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:minLines="2"
                    android:textColor="@color/black"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="4dp"
                   android:layout_toEndOf="@+id/iv_laundry"
                    android:text="Product Name"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:id="@+id/tv_laundry_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="SmallSp" />
                <LinearLayout
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    android:text="Total"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:id="@+id/tv_laundry_grand_total_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SmallSp" />
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_rupee"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                <TextView
                    android:textColor="@color/black"
                    android:paddingStart="2dp"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tv_laundry_grand_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="SmallSp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                android:orientation="vertical"
               android:layout_weight="1"
              android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ll_price_laundry"
                    android:orientation="horizontal"
                    android:layout_below="@id/rl_detail_banner"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Steam Press : "
                        android:textSize="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="SmallSp" />
                    <ImageView
                        android:id="@+id/ivDetailsRupee"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/ic_rupee"
                        android:layout_width="6dp"
                        android:layout_height="6dp" />
                    <TextView
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:text="8"
                        android:id="@+id/tv_laundry_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="SmallSp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/ll_price_laundry"
                    android:id="@+id/ll_total_laundry"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivDetailsRupeeTotal"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_rupee"
                        android:layout_width="8dp"
                        android:layout_height="8dp" />
                    <TextView
                        android:layout_toEndOf="@+id/ivDetailsRupeeTotal"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="0"
                        android:id="@+id/tv_laundry_press_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:id="@+id/ll_btn_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_remove_laundry"
                        android:background="@drawable/ic_remove"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />
                    <TextView
                        android:id="@+id/tv_total_item_laundry_press"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/et_bg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <Button
                        android:id="@+id/btn_add_laundry"
                        android:background="@drawable/ic_add"
                        android:layout_width="22dp"
                        android:layout_height="22dp"/>
                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:orientation="vertical"
               android:layout_weight="1"
              android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ll_price_laundryWash"
                    android:orientation="horizontal"
                    android:layout_below="@id/rl_detail_banner"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Wash : "
                        android:textSize="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="SmallSp" />
                    <ImageView
                        android:id="@+id/ivDetailsRupeeWash"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/ic_rupee"
                        android:layout_width="6dp"
                        android:layout_height="6dp" />
                    <TextView
                        android:layout_below="@id/ll_price_laundry"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:text="8"
                        android:id="@+id/tv_laundry_price_wash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="SmallSp" />



                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/ll_price_laundryWash"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:id="@+id/ll_total_laundry_wash"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivDetailsRupeeTotalWash"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_rupee"
                        android:layout_width="8dp"
                        android:layout_height="8dp" />
                    <TextView
                        android:layout_toEndOf="@+id/ivDetailsRupeeTotalWash"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="0"
                        android:id="@+id/tv_laundry_wash_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:id="@+id/ll_btn_details_wash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_remove_laundry_wash"
                        android:background="@drawable/ic_remove"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />
                    <TextView
                        android:id="@+id/tv_total_item_laundry_wash"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/et_bg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <Button
                        android:id="@+id/btn_add_laundry_wash"
                        android:background="@drawable/ic_add"
                        android:layout_width="22dp"
                        android:layout_height="22dp"/>
                </LinearLayout>


            </RelativeLayout>

                <RelativeLayout
                android:orientation="vertical"
               android:layout_weight="1"
              android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ll_price_laundry_dry"
                    android:orientation="horizontal"
                    android:layout_below="@id/rl_detail_banner"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Dry Clean : "
                        android:textSize="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="SmallSp" />
                    <ImageView
                        android:id="@+id/ivDetailsRupeeDry"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/ic_rupee"
                        android:layout_width="6dp"
                        android:layout_height="6dp" />
                    <TextView
                        android:layout_below="@id/tv_laundry_price_wash"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="8"
                        android:id="@+id/tv_laundry_price_dry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="SmallSp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/ll_price_laundry_dry"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:id="@+id/ll_total_laundry_dry"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivDetailsRupeeTotalDry"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_rupee"
                        android:layout_width="8dp"
                        android:layout_height="8dp" />
                    <TextView
                        android:layout_toEndOf="@+id/ivDetailsRupeeTotalDry"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="0"
                        android:id="@+id/tv_laundry_dry_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:id="@+id/ll_btn_details_dry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_remove_laundry_dry"
                        android:background="@drawable/ic_remove"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />
                    <TextView
                        android:id="@+id/tv_total_item_laundry_dry"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/et_bg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <Button
                        android:id="@+id/btn_add_laundry_dry"
                        android:background="@drawable/ic_add"
                        android:layout_width="22dp"
                        android:layout_height="22dp"/>
                </LinearLayout>


            </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
<View
    android:background="@color/light_grey"
    android:layout_width="1dp"
    android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_weight=".6"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_alignParentTop="true"
                android:layout_above="@id/tv_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <TextView
                    android:id="@+id/tv_laundry_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="serif"
                    android:text="Items"
                    android:textColor="@color/black"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

            </ScrollView>
            <TextView
                android:id="@+id/tv_add_to_cart"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@color/red"
                android:text="Add"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:textAllCaps="false"
                android:layout_height="25dp" />

        </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
