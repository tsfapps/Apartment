<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/bg_btn_main_db"
    android:padding="@dimen/margin_top"
    android:layout_margin="@dimen/margin_top"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/ivDbApartListImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/ic_apart_unselected" />
    <TextView
        android:id="@+id/tvDbApartListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_primary"
        android:layout_marginTop="@dimen/margin_top"
        android:paddingEnd="@dimen/margin_top"
        android:paddingStart="@dimen/margin_top"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="Apart Name"
        />
</LinearLayout>