<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        android:elevation="22dp"
        android:background="@color/white"
    android:layout_marginTop="@dimen/margin_top"
    android:layout_marginEnd="@dimen/margin_top"
    android:layout_marginStart="@dimen/margin_top"
        app:cardCornerRadius="8dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <android.support.v7.widget.CardView
                    android:layout_margin="4dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp">
                    <ImageView
                        android:id="@+id/iv_orderList_icon"
                        android:layout_alignParentTop="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/main_cat_fresh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_orderListProduct_name"
                    android:minLines="2"
                    android:textColor="@color/black"
                    android:text="Product Name"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/tv_orderList_date"
                    android:gravity="center_vertical"
                    android:textColor="@color/blue"
                    android:text="Date"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight=".6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="Total Quantity"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        style="@style/tv_item_price" />

                    <TextView
                        android:layout_marginTop="@dimen/margin_top"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="Total Price"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        style="@style/tv_item_price"  />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginEnd="@dimen/margin_top"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight=".30"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="@color/red"
                        android:id="@+id/tv_orderListCount_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|end"
                        android:textSize="14sp"
                        style="@style/tv_item_price"/>
                    <TextView
                        android:layout_marginTop="@dimen/margin_top"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical|end"
                        android:textColor="@color/red"
                        android:id="@+id/tv_orderListPrice_total"
                        android:textSize="14sp"
                        style="@style/tv_item_price"  />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:hint="Steam Press in ₹"
                        style="@style/tv_item_price"/>
                    <TextView
                        android:id="@+id/tv_orderListPrice_press"
                        style="@style/tv_item_price"
                        />
                    <TextView
                        android:text="Quantity"
                        style="@style/tv_item_label" />
                    <TextView
                        android:id="@+id/tv_orderListCount_press"
                        style="@style/tv_cart_checkout"/>


                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <TextView
                        android:hint="Wash in ₹"
                        style="@style/tv_item_price" />
                    <TextView
                        android:id="@+id/tv_orderListPrice_wash"
                        style="@style/tv_item_price" />


                    <TextView
                        android:text="Quantity"
                        style="@style/tv_item_label"/>
                    <TextView
                        android:id="@+id/tv_orderListCount_wash"
                        style="@style/tv_cart_checkout"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:hint="Dry Clean in ₹"
                        style="@style/tv_item_price" />
                    <TextView
                        android:id="@+id/tv_orderListPrice_dry"
                        style="@style/tv_item_price"
                        />
                    <TextView
                        android:text="Quantity"
                        style="@style/tv_item_label" />
                    <TextView
                        android:id="@+id/tv_orderListCount_dry"
                        style="@style/tv_cart_checkout"/>

                </LinearLayout>

            </LinearLayout>

               <Button
                   android:layout_gravity="end"
                   android:textColor="@color/white"
                   android:layout_margin="@dimen/margin_top"
                   android:id="@+id/btn_orderListCancel"
                   android:layout_marginTop="@dimen/margin_top"
                   android:background="@drawable/bg_primary"
                   android:text="Cancel Order"
                   android:textAllCaps="false"
                   android:layout_width="wrap_content"
                   android:paddingEnd="10dp"
                   android:paddingStart="10dp"
                   android:layout_height="30dp" />
        </LinearLayout>

</android.support.v7.widget.CardView>